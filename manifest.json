{
  "manifest_version": 2,

  "name": "Night Mode",
  "version": "1.0",
  "description": "this extension makes pages into night mode",
  "permissions": [
      "activeTab",
      "storage",
      "background"
    ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Reading Helper",
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["constants.js", "content_script.js"],
    "css": ["styling/night_mode.css"]
  }
]
}
